# CasperVault Environment Variables Template
# Copy this to .env and fill in your values

# Casper Network
CASPER_NETWORK=casper-test
CASPER_RPC_URL=https://rpc.testnet.casperlabs.io/rpc
CASPER_EVENT_STREAM_URL=https://rpc.testnet.casperlabs.io/events

# Wallet (DO NOT COMMIT REAL KEYS)
PRIVATE_KEY_PATH=./keys/secret_key.pem
PUBLIC_KEY_PATH=./keys/public_key.pem

# Contract Addresses (fill after deployment)
VAULT_MANAGER_CONTRACT=
LIQUID_STAKING_CONTRACT=
STRATEGY_ROUTER_CONTRACT=
YIELD_AGGREGATOR_CONTRACT=
CV_CSPR_TOKEN_CONTRACT=
LST_CSPR_TOKEN_CONTRACT=

# API Configuration
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# Database (Supabase)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Redis (for background jobs)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=
CORS_ORIGIN=http://localhost:5173

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=
