# Backend Environment Variables
# Copy this to .env and fill in your values

# Server
NODE_ENV=development
PORT=3000
HOST=localhost

# Casper Network
CASPER_NETWORK=casper-test
CASPER_RPC_URL=https://rpc.testnet.casperlabs.io/rpc
CASPER_EVENT_STREAM_URL=https://rpc.testnet.casperlabs.io/events

# Wallet Keys
PRIVATE_KEY_PATH=../keys/secret_key.pem
PUBLIC_KEY_PATH=../keys/public_key.pem

# Smart Contract Addresses (after deployment)
VAULT_MANAGER_HASH=
LIQUID_STAKING_HASH=
STRATEGY_ROUTER_HASH=
YIELD_AGGREGATOR_HASH=
CV_CSPR_TOKEN_HASH=
LST_CSPR_TOKEN_HASH=

# Database
DATABASE_URL=
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_KEY=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Security
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_PORT=3001

# Bots Configuration
OPTIMIZER_INTERVAL=43200000
COMPOUNDER_INTERVAL=86400000
MONITOR_INTERVAL=60000

# External APIs (for APY calculations)
DEX_API_URL=
LENDING_API_URL=
BRIDGE_API_URL=

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
